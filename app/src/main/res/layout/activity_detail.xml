<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.DetailActivity"
    android:background="@color/white"
    >

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/tt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/xui_config_color_titlebar"
        app:tb_barHeight="50dp"
        app:tb_dividerColor="@color/xui_config_color_red"
        app:tb_sideTextPadding="20dp"
        app:tb_actionPadding="20dp"
        app:tb_titleText="这是一个Title"

        />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintTop_toBottomOf="@+id/tt_title"
            android:orientation="horizontal"
            >
            <ScrollView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <com.cohelp.task_for_stu.ui.view.NetRadiusImageView
                            android:id="@+id/image_UserIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="20dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/text_UserId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:text="用户昵称"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/text_TopicCreateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12dp"
                                android:text="活动时间" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_MessageTitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="标题"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/text_TopicDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="测试文字"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/black"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </GridView>
                </LinearLayout>


            </ScrollView>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton_Like"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_dianzan_undo"
                android:scaleType="fitCenter"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton_Comment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_comment"
                android:scaleType="fitCenter"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageButton_Collect"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_collect_undo"
                android:scaleType="fitCenter"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
<!--        <include layout="@layout/view_comment_bottomsheet"></include>-->
</androidx.constraintlayout.widget.ConstraintLayout>
