<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:contentPadding="8dp"
    tools:context=".ui.activity.user.ActivityCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/act_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaynm"
            android:singleLine="true"
            android:maxEms="7"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/act_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/act_title" />

        <com.cohelp.task_for_stu.ui.view.AvatorImageView
            android:id="@+id/act_author_pic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user_bottom_chosed"
            app:layout_constraintStart_toStartOf="@+id/act_title"
            app:layout_constraintTop_toBottomOf="@+id/act_title"
        />

        <TextView
            android:id="@+id/act_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="balabala"
            android:singleLine="true"
            android:maxEms="10"
            app:layout_constraintStart_toEndOf="@id/act_author_pic"
            app:layout_constraintTop_toBottomOf="@id/act_title"  />

        <TextView
            android:id="@+id/act_address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="earth"
            app:layout_constraintEnd_toEndOf="@id/act_time"
            app:layout_constraintTop_toBottomOf="@id/act_author_name"  />

        <TextView
            android:id="@+id/act_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不想玩啦一二三四五六七八九十一二三四五六七八九十"
            android:singleLine="true"
            android:maxEms="15"
            app:layout_constraintStart_toStartOf="@+id/act_title"
            app:layout_constraintTop_toBottomOf="@+id/act_author_pic" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>