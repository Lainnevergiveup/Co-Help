<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:outlineAmbientShadowColor="@color/black">

    <RelativeLayout
        android:id="@+id/dialog_bottomsheet_rl_title"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/dialog_bottomsheet_iv_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_send"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dialog_bottomsheet_iv_close"
            android:text="评论"
            android:textColor="#333"
            android:textSize="16sp" />

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/comment_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_bottomsheet_rl_title"
        android:background="#fff"
        android:groupIndicator="@null"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:minWidth="300dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"/>
        <Button
            android:id="@+id/btn_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_comment"
            android:text="发送"
            android:maxLines="1"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

</LinearLayout>