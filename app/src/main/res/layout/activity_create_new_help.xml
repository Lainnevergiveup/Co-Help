<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/my_drawable"
    tools:context=".ui.activity.user.CreateNewHelpActivity">
    <include layout="@layout/common_toolbar_publish2" />
    <!--    Integer reward;-->
    <!--        String title;-->
    <!--    String desc;-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/info_solid"
                >

                <EditText
                    android:id="@+id/id_et_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="20sp"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textStyle="bold"
                    android:hint="输入您的标题"
                    android:inputType="textLongMessage"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />



                <EditText
                    android:id="@+id/id_et_content"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginBottom="10dp"
                    android:hint="互助详情描述..."
                    android:maxLines="5" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/id_recycler_view"
                    android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="20sp"
                    />

            </LinearLayout>

            <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                android:id="@+id/flowlayout_single_select_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="标签:"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray_9b"
                android:textSize="15sp">

            </TextView>
            <com.cohelp.task_for_stu.ui.activity.user.FlowtagLayout
                android:id="@+id/flowlayout_single_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>