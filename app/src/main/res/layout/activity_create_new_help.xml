<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.user.CreateNewHelpActivity">
    <include layout="@layout/common_toolbar" />
    <!--    Integer reward;-->
    <!--        String title;-->
    <!--    String desc;-->

    <EditText
        android:id="@+id/id_et_title"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/search_solid"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:hint="输入您的标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"/>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="200dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:focusable="false"
            android:id="@+id/id_et_startDate"
            android:background="@drawable/search_solid"
            android:hint="输入开始时间"
            android:layout_gravity="center"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="datetime"/>

    </LinearLayout>

    <EditText
        android:layout_margin="16dp"
        android:id="@+id/id_et_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:hint="互助详情描述..."
        android:maxLines="5" />

    <!--    <EditText-->
    <!--        android:id="@+id/id_et_content"-->
    <!--        android:layout_marginTop="20sp"-->
    <!--        android:layout_marginLeft="20sp"-->
    <!--        android:layout_marginRight="20sp"-->
    <!--        android:background="@drawable/search_solid"-->
    <!--        android:gravity="top"-->
    <!--        android:paddingTop="5dp"-->
    <!--        android:paddingLeft="5dp"-->
    <!--        android:hint="输入您的任务描述"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="240sp"-->
    <!--        android:inputType="textMultiLine"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp">

            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4" />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签:"
            android:textSize="20sp"
            android:textColor="@color/black"
            >

        </TextView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           >
           <CheckBox

               android:id="@+id/id_cb_money"
               android:layout_width="90dp"
               android:layout_height="45dp"
               android:text="有偿"
               android:textSize="20dp"

               />
           <CheckBox
               android:layout_marginLeft="20dp"
               android:id="@+id/id_cb_no_money"
               android:layout_width="90dp"
               android:layout_height="45dp"
               android:text="无偿"
               android:textSize="20dp"

               />

           <EditText
               android:id="@+id/id_et_diy"
               android:layout_marginLeft="20dp"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:hint="自定义"
               android:textSize="20dp"
               android:textColorHighlight="@color/black"
               >

           </EditText>


       </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/id_btn_submit"
        android:text="发布"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_bg_pink"
        style="@style/Button_Large_Pink"
        android:layout_height="wrap_content"/>
</LinearLayout>