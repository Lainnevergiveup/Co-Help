<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="@dimen/activity_horizontal_margin"

    app:contentPaddingRight="@dimen/activity_horizontal_margin"
    app:contentPaddingTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardView_summary"
                style="@style/TextStyle.Title"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="3"
                android:singleLine="false"
                android:text="深度解析RocketMQ消息发送的高可用设计"
                android:textSize="@dimen/text_size_16"

                android:textColor="@color/xui_config_color_pure_black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cardView_difficulity"
                    style="@style/TextStyle.Content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    android:text="difficulity"
                    android:textColor="?attr/xui_config_color_content_text" />

            </LinearLayout>

        </LinearLayout>

        <com.cohelp.task_for_stu.ui.view.NetRadiusImageView
            android:id="@+id/cardView_firstImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="5dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardView_ansList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.cardview.widget.CardView>