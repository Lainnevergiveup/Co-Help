<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.user.CreateNewTaskActivity">
    <include layout="@layout/common_toolbar_publish2" />
    <!--    Integer reward;-->
<!--        String title;-->
    <!--    String desc;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/info_solid"
        >
        <EditText
            android:id="@+id/id_et_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@null"
            android:hint="输入您的标题"
            android:inputType="textLongMessage"
            android:paddingLeft="5dp"
            />


            <EditText
                android:focusable="false"
                android:id="@+id/id_et_startDate"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:hint="活动时间"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="datetime"/>


        <EditText
            android:id="@+id/id_et_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="20dp"
            android:gravity="top"
            android:background="@null"
            android:hint="活动详情描述..."
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:maxLines="5"
            android:textSize="15sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_recycler_view"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent" />


    </LinearLayout>





