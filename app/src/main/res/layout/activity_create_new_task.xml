<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.user.CreateNewTaskActivity">
    <include layout="@layout/common_toolbar" />
    <!--    Integer reward;-->
<!--        String title;-->
    <!--    String desc;-->

    <EditText
        android:id="@+id/id_et_title"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/search_solid"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:hint="输入您的标题"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"/>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:focusable="false"
            android:id="@+id/id_et_startDate"
            android:background="@drawable/search_solid"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            android:hint="输入开始时间"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:inputType="datetime"/>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20sp"

        android:id="@+id/id_et_content"
        android:gravity="top"
        android:textSize="15sp"
        android:hint="活动详情描述..."
        android:maxLines="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:padding="5dp">
            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4" />
        </LinearLayout>

<!--    <EditText-->
<!--        android:id="@+id/id_et_content"-->
<!--        android:layout_marginTop="20sp"-->
<!--        android:layout_marginLeft="20sp"-->
<!--        android:layout_marginRight="20sp"-->
<!--        android:background="@drawable/search_solid"-->
<!--        android:gravity="top"-->
<!--        android:paddingTop="5dp"-->
<!--        android:paddingLeft="5dp"-->
<!--        android:hint="输入您的任务描述"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="240sp"-->
<!--        android:inputType="textMultiLine"/>-->



    <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
        android:id="@+id/id_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="18sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="发布"
        android:textSize="20sp"
        app:sb_radius="5dp"
        android:textStyle="bold"
        app:sb_alpha_pressed="40"
        app:sb_color_pressed="#0303ff"
        app:sb_color_unpressed="#8aacee" />
</LinearLayout>